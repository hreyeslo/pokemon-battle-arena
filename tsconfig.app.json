{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"moduleResolution": "node",
		"isolatedModules": true,
		"noEmit": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		]
	},
	"include": [
		"src/app"
	],
	"exclude": [
		"./jest.config.js",
		"./node_modules",
		"./coverage",
		"./src/api",
		"./build",
		"./test"
	]
}