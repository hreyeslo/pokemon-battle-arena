{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "./src",
    "noImplicitAny": false,
    "lib": [
      "es6"
    ],
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
      }
    ],
    "paths": {
      "@api/config": [
        "config/config"
      ]
    },
  }
}